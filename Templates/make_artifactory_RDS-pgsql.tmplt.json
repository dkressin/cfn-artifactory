{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Conditions": {
    "UsePgSqlMinor": {
      "Fn::Equals": [
        {
          "Fn::Select": [
            "0",
            {
              "Fn::Split": [
                ".",
                { "Ref": "PgsqlVersion" }
              ]
            }
          ]
        },
        "9"
      ]
    }
  },
  "Description": "This template sets up the RDS database used by an Artifactory instance for storing configuration and metadata tracking.",
  "Parameters": {
    "DbHostName": {
      "Description": "Service hostname for the RDS Instance",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern": "^[a-zA-Z][a-zA-Z0-9-]*[a-zA-Z0-9]*$"
    },
    "DbCatlogTable": {
      "Description": "Name of the PostGreSQL catalog/schema table.",
      "Type": "String",
      "MinLength": "1",
      "MaxLength": "64",
      "AllowedPattern": "^[a-zA-Z][a-zA-Z0-9_]*[a-zA-Z0-9]*$"
    },
    "DBInstanceClass": {
      "Description": "Instance-type(s) hosting the database service.",
      "Type": "String",
      "Default": "db.t2.micro",
      "AllowedValues": [
        "db.t2.micro",
        "db.t2.small",
        "db.t2.medium",
        "db.t2.large",
        "db.m3.medium",
        "db.m3.large",
        "db.m3.xlarge",
        "db.m3.2xlarge",
        "db.m4.large",
        "db.m4.xlarge",
        "db.m4.2xlarge",
        "db.m4.4xlarge",
        "db.m4.10xlarge",
        "db.r3.large",
        "db.r3.xlarge",
        "db.r3.2xlarge",
        "db.r3.4xlarge",
        "db.r3.8xlarge"
      ]
    },
    "DbStorageSize": {
      "Description": "Size (in GiB) of the PGSQL database.",
      "Type": "Number",
      "Default": "10",
      "MinValue": "5",
      "MaxValue": "16384",
      "ConstraintDescription": "Must be between 1GB and 16384GB."
    },
    "PgsqlAdminName": {
      "Description": "The PGSQL root/admin user.",
      "Type": "String",
      "MinLength": "8",
      "MaxLength": "32",
      "AllowedPattern": "^[a-z][a-z0-9_]*[a-z0-9]*$"
    },
    "PgsqlAdminPassword": {
      "Description": "The PGSQL root/admin user's password.",
      "Type": "String",
      "MinLength": "8",
      "MaxLength": "32"
    },
    "PgsqlVersion": {
      "AllowedValues": [
        "10.4",
        "10.3",
        "10.1",
        "9.6.10",
        "9.6.9",
        "9.6.8",
        "9.6.6",
        "9.6.5",
        "9.6.3",
        "9.6.2",
        "9.6.1",
        "9.5.14",
        "9.5.13",
        "9.5.12",
        "9.5.10",
        "9.5.9",
        "9.5.7",
        "9.5.6",
        "9.5.4",
        "9.5.2"
      ],
      "Description": "The X.Y.Z version of PostGreSQL to use.",
      "Type": "String",
      "Default": "9.6.10"
    },
    "PgsqlHa": {
      "Description": "The EC2 VPC that will host the RDS node(s).",
      "Type" : "String",
      "Default": "false",
      "AllowedValues": [
        "false",
        "true"
      ]
    },
    "VpcId" : {
      "Type" : "AWS::EC2::VPC::Id",
      "Description" : "ID of an existing Virtual Private Cloud (VPC)."
    }
  },
  "Resources": {
    "PgsqlDb": {
      "Metadata": {},
      "Type": "AWS::RDS::DBInstance",
      "Properties": {
        "PubliclyAccessible": false,
        "Engine": "postgres",
        "EngineVersion": {
           "Ref": "PgsqlVersion"
        },
        "MultiAZ": { "Ref": "PgsqlHa"},
        "AutoMinorVersionUpgrade": true,
        "PreferredBackupWindow": "05:00-05:30",
        "BackupRetentionPeriod": 7,
        "DBName": {
          "Ref": "DbCatlogTable"
        },
        "DBInstanceIdentifier": {
          "Ref": "DbHostName"
        },
        "MasterUsername": {
          "Ref": "PgsqlAdminName"
        },
        "MasterUserPassword": {
          "Ref": "PgsqlAdminPassword"
        },
        "AllocatedStorage": {
          "Ref": "DbStorageSize"
        },
        "DBInstanceClass": {
          "Ref": "DBInstanceClass"
        },
        "Tags" : [
          {
            "Key" : "Name",
            "Value" : "Artifactory PGSQL Database"
          }
        ]
      }
    },
    "RDSdbParmGrp": {
      "Properties": {
        "Description": "Parameters used to modify database behavior and performance characteristics",
        "Family": {
          "Fn::Join": [
            "",
            [
              "postgres",
              {
                "Fn::Select": [
                  "0",
                  {
                    "Fn::Split": [
                      ".",
                      { "Ref": "PgsqlVersion" }
                    ]
                  }
                ]
              },
              {
                "Fn::If": [
                  "UsePgSqlMinor",
                  {
                    "Fn::Join": [
                      "",
                      [
                        ".",
                        {
                          "Fn::Select": [
                            "1",
                            {
                              "Fn::Split": [
                                ".",
                                { "Ref": "PgsqlVersion" }
                              ]
                            }
                          ]
                        }
                      ]
                    ]
                  },
                  { "Ref": "AWS::NoValue" }
                ]
              }
            ]
          ]
        }
      },
      "Type": "AWS::RDS::DBParameterGroup"
    }
  }
}
